<?xml version="1.0" encoding="UTF-8"?>
<django_project>
    <name>social_network</name>
    <app>
        <name>social</name>
        <entities>
            <entity>
                <name>User</name>
                <fields>
                    <field>
                        <name>username</name>
                        <type>CharField</type>
                        <max_length>150</max_length>
                        <unique>true</unique>
                    </field>
                    <field>
                        <name>email</name>
                        <type>EmailField</type>
                        <unique>true</unique>
                    </field>
                    <field>
                        <name>date_joined</name>
                        <type>DateTimeField</type>
                        <default>timezone.now</default>
                    </field>
                </fields>
            </entity>
            <entity>
                <name>Profile</name>
                <fields>
                    <field>
                        <name>bio</name>
                        <type>TextField</type>
                        <blank>true</blank>
                    </field>
                    <field>
                        <name>location</name>
                        <type>CharField</type>
                        <max_length>100</max_length>
                        <blank>true</blank>
                    </field>
                </fields>
            </entity>
            <entity>
                <name>Post</name>
                <fields>
                    <field>
                        <name>content</name>
                        <type>TextField</type>
                    </field>
                    <field>
                        <name>created_at</name>
                        <type>DateTimeField</type>
                        <default>timezone.now</default>
                    </field>
                </fields>
            </entity>
            <entity>
                <name>Comment</name>
                <fields>
                    <field>
                        <name>content</name>
                        <type>TextField</type>
                    </field>
                    <field>
                        <name>created_at</name>
                        <type>DateTimeField</type>
                        <default>timezone.now</default>
                    </field>
                </fields>
            </entity>
            <entity>
                <name>Group</name>
                <fields>
                    <field>
                        <name>name</name>
                        <type>CharField</type>
                        <max_length>100</max_length>
                    </field>
                    <field>
                        <name>description</name>
                        <type>TextField</type>
                        <blank>true</blank>
                    </field>
                </fields>
            </entity>
        </entities>
    </app>
    <relationships>
        <!-- User - Profile (One-to-One) -->
        <relationship>
            <type>OneToOne</type>
            <from>User</from>
            <to>Profile</to>
            <field_name>user</field_name>
            <related_name>profile</related_name>
            <on_delete>CASCADE</on_delete>
        </relationship>
        
        <!-- User - Post (One-to-Many) -->
        <relationship>
            <type>ManyToOne</type>
            <from>Post</from>
            <to>User</to>
            <field_name>author</field_name>
            <related_name>posts</related_name>
            <on_delete>CASCADE</on_delete>
        </relationship>
        
        <!-- Post - Comment (One-to-Many) -->
        <relationship>
            <type>ManyToOne</type>
            <from>Comment</from>
            <to>Post</to>
            <field_name>post</field_name>
            <related_name>comments</related_name>
            <on_delete>CASCADE</on_delete>
        </relationship>
        
        <!-- Comment - User (Many-to-One) -->
        <relationship>
            <type>ManyToOne</type>
            <from>Comment</from>
            <to>User</to>
            <field_name>author</field_name>
            <related_name>comments</related_name>
            <on_delete>CASCADE</on_delete>
        </relationship>
        
        <!-- User - Group (Many-to-Many) -->
        <relationship>
            <type>ManyToMany</type>
            <from>User</from>
            <to>Group</to>
            <field_name>members</field_name>
            <related_name>groups</related_name>
        </relationship>
    </relationships>
</django_project> 